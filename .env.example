# Solar Hub Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# System A - Platform & Monitoring
# =============================================================================
APP_NAME="Solar Hub Platform"
APP_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=solar_hub
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=5
DB_ECHO_SQL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Notifications
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_SMS_PROVIDER=twilio
NOTIFICATION_SMS_API_KEY=
NOTIFICATION_SMS_API_SECRET=
NOTIFICATION_SMS_SENDER_ID=SOLARHUB

NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SMTP_HOST=smtp.gmail.com
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USER=
NOTIFICATION_SMTP_PASSWORD=
NOTIFICATION_SMTP_FROM_EMAIL=noreply@solarhub.pk

# AI Features
AI_ENABLED=true
AI_PROVIDER=openai
AI_API_KEY=
AI_MODEL=gpt-4

# =============================================================================
# System B - Communication & Telemetry
# =============================================================================
# TimescaleDB
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_NAME=solar_hub_telemetry
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=postgres
TIMESCALE_POOL_SIZE=10
TIMESCALE_RETENTION_DAYS=90
TIMESCALE_COMPRESSION_AFTER_DAYS=7

# Redis (separate DB for System B)
# Uses same Redis instance but different DB number

# MQTT Protocol
PROTOCOL_MQTT_ENABLED=true
PROTOCOL_MQTT_BROKER_HOST=localhost
PROTOCOL_MQTT_BROKER_PORT=1883
PROTOCOL_MQTT_USERNAME=
PROTOCOL_MQTT_PASSWORD=
PROTOCOL_MQTT_TOPIC_PREFIX=solarhub/

# Modbus Protocol
PROTOCOL_MODBUS_ENABLED=true
PROTOCOL_MODBUS_TCP_PORT=502
PROTOCOL_MODBUS_TIMEOUT=5.0

# Device Authentication
DEVICE_AUTH_TOKEN_VALIDITY_MINUTES=5
DEVICE_AUTH_SECRET_KEY=device-secret-change-in-production

# Telemetry Processing
TELEMETRY_BATCH_SIZE=100
TELEMETRY_FLUSH_INTERVAL_SECONDS=1.0
TELEMETRY_MAX_MESSAGES_PER_MINUTE=120

# Workers
WORKER_TELEMETRY_PROCESSOR_WORKERS=4
WORKER_AGGREGATION_WORKER_INTERVAL=60
WORKER_ALERT_CHECKER_INTERVAL=10

# System A Integration
SYSTEM_A_URL=http://localhost:8000
SYSTEM_A_API_KEY=
